{
  "name": "base-graphql-prisma-mongo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "generate": "yarn prisma:generate && graphql-codegen --config codegen.yml && copyfiles -u 1 src/**/*.graphql dist",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=local ts-node-dev --respawn src/index.ts",
    "prisma:generate": "yarn prisma generate",
    "tsc": "tsc",
    "test": "jest --verbose --coverage",
    "test-ci": "yarn prisma:generate && yarn tsc && yarn test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "yarn tsc && cp -r src/assets dist",
    "deploy": "git push heroku main"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.11.8",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.22.0",
    "jest": "^29.0.0",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.2",
    "@graphql-tools/load": "^7.7.4",
    "@graphql-tools/schema": "^9.0.1",
    "@prisma/client": "^4.2.1",
    "apollo-server-express": "^3.8.2",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "date-fns": "^2.29.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "pino": "^8.4.2",
    "prisma": "^4.2.1",
    "reflect-metadata": "^0.1.13"
  }
}
